<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_grey_200"
    android:paddingBottom="4dp"
    android:paddingLeft="@dimen/sample_activity_horizontal_margin"
    android:paddingRight="@dimen/sample_activity_horizontal_margin"
    android:paddingTop="4dp">

    <TextView
        android:id="@+id/tv_my_channel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:text="@string/my_channel"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/channel_sort_delete"
        android:background="@drawable/round_accent_selector"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="15sp" />


</LinearLayout>



